<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <Button
        android:id="@+id/btn_match_const"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Match Constraint"
        android:background="@color/red"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_wrap_content"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Wrap Content"
        android:textSize="24sp"
        android:background="@color/purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_const" />

    <Button
        android:id="@+id/btn_match_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Match Parent"
        android:textColor="@color/white"
        android:background="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/tv_wrap_content" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="Left side text"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_parent" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Center text"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_parent" />

    <TextView
        android:id="@+id/tv_right_side"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/green"
        android:text="Right side text"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_center"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_parent" />


</android.support.constraint.ConstraintLayout>